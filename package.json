{
  "name": "communitils",
  "description": "Breaking into open-source with a TypeScript utility package while inviting others to do the same.",
  "version": "0.3.4",
  "type": "module",
  "packageManager": "npm@20.10.0",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run dts && rollup -c",
    "clean": "rm -rf dist",
    "clean:build": "npm run clean && npm run build",
    "dev": "rollup -c -w",
    "dts": "tsc && cat src/**/*.d.ts > src/main.d.ts",
    "test": "npm run dts && vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "rollup": "^4.9.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "utils",
    "open-source"
  ],
  "license": "MIT"
}
